<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            font-family: Arial, sans-serif;
            box-sizing: border-box;
        }

        @page {
            margin: 5mm;
            size: 210mm 297mm;
        }

        .boleto {
            margin-bottom: 3mm;
            margin: 0 auto 3mm auto;
            width: 205mm;
            overflow: hidden;
            max-height: 70mm;
            display: flex;
        }

        .boleto:nth-child(4n+1) {
            page-break-before: always;
        }

        .boleto:first-child {
            padding-top: 0 !important;
        }

        .left_section {
            margin-bottom: 5px;
            padding-right: 3mm;
        }

        .left_section h1 {
            font-size: 11px;
            margin: 0;
        }

        .left_section p {
            font-size: 12px;
            margin: 0;
            text-align: end;
            font-weight: bold;
            border-bottom: 1px solid black;
        }

        .pagador {
            border-bottom: 1px solid black;
        }

        .top_section {
            display: flex;
            height: fit-content;
        }

        .top_section div {
            vertical-align: middle;
            display: flex;
            padding: 0 6px;
            align-items: center;
        }

        .top_section p {
            font-size: 16px;
            margin: 0;
        }

        .center-content {
            height: calc(100% - 25px);
            border: 1px solid black;
            display: flex;
        }

        .center-content .colum {
            font-size: 10px;
            text-align: center;
            width: 100%;
            height: 100%;
        }

        .center-content>.colum:last-child {
            border-left: 1px solid black;
            width: 70mm;
        }

        .right_section {
            width: 100%;
            padding: 1mm;
            display: flex;
            flex-direction: column;
            border-bottom: 1px solid black;
        }

        .right_section:last-child {
            border-bottom: 0;
        }

        .right_section h1 {
            font-size: 11px;
            text-align: start;
            margin: 0;
        }

        .right_section p {
            font-size: 12px;
            text-align: end;
            margin: 0;
        }

        .center-content .row {
            width: 100%;
            padding: 1mm;
            display: flex;
            flex-direction: column;
            border-bottom: 1px solid black;
        }

        .center-content .rowgrid {
            width: 100%;
            display: flex;
            border-bottom: 1px solid black;
        }

        .center-content .rowgrid .block {
            padding: 1mm;
        }

        .block+.block {
            border-left: 1px solid black !important;
        }

        .center-content .row h1,
        .center-content .rowgrid h1 {
            font-size: 11px;
            text-align: start;
            margin: 0;
        }

        .center-content .row p {
            font-size: 12px;
            text-align: start;
            margin: 0;
        }

        .center-content .rowgrid p {
            text-align: end;
            margin: 0;
            font-size: 12px;
        }

        .qrcoderow {
            display: flex;
            border-bottom: 1px solid black;
        }

        .qrcoderow .left {
            display: flex;
            height: fit-content;
            flex-direction: column;
        }

        .qrcoderow .left .top {
            display: flex;
            height: fit-content;
            border-bottom: 1px solid black;
        }

        .qrcoderow .left .block {
            padding: 1mm;
        }

        .qrcoderow .left .block p {
            padding: 0 !important;
            margin: 0;
            text-align: start;
        }

        .qrcoderow .left h1 {
            font-size: 11px;
            text-align: start;
            margin: 0;
        }

        .qrcoderow .left .bot {
            padding: 1mm;
        }
        .qrcoderow .left .bot p{
            margin: 0;
            text-align: start;
        }
        .qrcoderow .right {
            border-left: 1px solid black;
            width: 34mm;
        }

        .qrcoderow .right h1 {
            font-size: 10px;
            margin: 0;
        }
    </style>
</head>

<body style="max-width: 210mm;">
    {{{body}}}

    <script>
        document.querySelectorAll('.date_format').forEach((el) => {
            const date = moment(el.innerText, 'DDMMYYYY').format('DD/MM/YYYY')
            el.innerText = date
        })
        document.querySelectorAll('.valor').forEach((el) => {
            const valor = parseFloat(el.innerText) / 100
            const valorCurrency = valor.toLocaleString('pt-br', { style: 'currency', currency: 'BRL' });
            el.innerText = valorCurrency
        })
    </script>
</body>

</html>